@model MvcSolar.Models.Lembrete

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Lembrete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LembreteID" />
            <div class="form-group">
                <label asp-for="dataHora" class="control-label"></label>
                <input asp-for="dataHora" class="form-control" />
                <span asp-validation-for="dataHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventoID" class="control-label"></label>
                <select asp-for="EventoID" class="form-control" asp-items="ViewBag.EventoID"></select>
                <span asp-validation-for="EventoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UtilizadorID" class="control-label"></label>
                <select asp-for="UtilizadorID" class="form-control" asp-items="ViewBag.UtilizadorID"></select>
                <span asp-validation-for="UtilizadorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
