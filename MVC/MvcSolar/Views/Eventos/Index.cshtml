@model IEnumerable<MvcSolar.Models.Evento>

    @{
        ViewData["Title"] = "Index";
    }

    <h1>Eventos</h1>

    <p>
        <a asp-action="Create">Criar Novo</a>
    </p>
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Pesquisar por nome: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Procurar" class="btn btn-default" /> |
                <a asp-action="Index">Voltar</a>
            </p>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Nome)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"> @Html.DisplayNameFor(model => model.Data)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFinal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFinal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EventoId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.EventoId">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.EventoId">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
