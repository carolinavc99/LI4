@model IEnumerable<MvcSolar.Models.Meteorologia>

@{
    ViewData["Title"] = "Index";
}

<h1>Meteorologia</h1>

<p>
    <a asp-action="Create">Criar Nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.WeatherType)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]"> @Html.DisplayNameFor(model => model.SkyCondition)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProbPrecipitacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sunrise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sunset)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkyCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProbPrecipitacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sunrise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sunset)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MeteorologiaID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MeteorologiaID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.MeteorologiaID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
